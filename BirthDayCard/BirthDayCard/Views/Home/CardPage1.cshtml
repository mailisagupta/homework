@model BirthDayCard.Models.GetCardFields

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <style>
        #forBorder {
            border: 1px solid black;
            padding: 8px;
            margin: 8px;
            width: 700px;
        }
        
        h4 {
            background-color: black;
            color: white;
            border: 1px solid gray;
            padding: 8px;
        }
        h5 {
            padding: 8px;
        }
        </style >
        <meta name="viewport" content="width=device-width" />
        <title > CardPage1</title >
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        </head >
<body>
    <div id="forBorder">
        <h4> Birthday Card Generator</h4>
        <br />
        <h5> Send a Birthday Card</h5>
        <hr />


        <div class="row">
            <div class="col-md-4">
                <form asp-action="CardPage1">
                    <div asp-validation-summary="All" class="text-danger"> </div>
                    <div class="form-group">
                        <label asp-for="From" class="control-label"> </label>
                        <input asp-for="From" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="To" class="control-label"> </label>
                        <input asp-for="To" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"> </label>
                        <input asp-for="Message" class="form-control" />

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Card" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index"> Exit</a>
        </div>
    </div>

</body>
        </html >
