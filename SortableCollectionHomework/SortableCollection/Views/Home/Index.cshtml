@model IEnumerable<SortableCollection.Models.Contact>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
    <thead>
        <tr>
                <th>
                    @Html.ActionLink("ID", "Index", "Home", new { sortOrder = "id" })
                </th>
                <th>
                   @Html.ActionLink("Name", "Index", "Home", new { sortOrder = "name" })</th>
                <th>
                    @Html.ActionLink("City", "Index", "Home", new { sortOrder = "city" })</th>
                <th>
                    @Html.ActionLink("State", "Index", "Home", new { sortOrder = "state" })
                    </th>
            <th>
                @Html.ActionLink("Phone", "Index", "Home", new { sortOrder = "phone" })
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        </tr>
}
    </tbody>
</table>
</div>
